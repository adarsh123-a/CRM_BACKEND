generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  size      Int
  users     User[]   @relation("CompanyUsers")
}

model User {
  name          String?
  email         String         @unique
  role          Role           @default(SALES_EXECUTIVE)
  createdAt     DateTime       @default(now())
  passwordHash  String
  companyId     Int?
  company       Company?       @relation("CompanyUsers", fields: [companyId], references: [id])
  id            Int            @id @default(autoincrement())
  leads         Lead[]         @relation("OwnerLeads")
  leadHistories LeadHistory[]  @relation("ChangedByHistories")
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Lead {
  id            Int           @id @default(autoincrement())
  title         String
  status        LeadStatus    @default(NEW)
  ownerId       Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  email         String?
  phone         String?
  customer      String?       // New field for customer
  contactPerson String?       // New field for contact person
  contactNumber String?       // New field for contact number
  owner         User          @relation("OwnerLeads", fields: [ownerId], references: [id])
  leadHistories LeadHistory[]
}

model LeadHistory {
  id          Int        @id @default(autoincrement())
  leadId      Int
  changedById Int
  oldStatus   LeadStatus
  newStatus   LeadStatus
  notes       String?    // Existing field for notes
  meetingDetails String? // New field for meeting details
  changedAt   DateTime   @default(now())
  changedBy   User       @relation("ChangedByHistories", fields: [changedById], references: [id])
  lead        Lead       @relation(fields: [leadId], references: [id])
}

enum Role {
  ADMIN
  MANAGER
  SALES_EXECUTIVE
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  CLOSED
}
